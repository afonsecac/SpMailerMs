{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "templates/**/*", "outDir": "dist/templates" },
      { "include": "templates/*", "outDir": "dist/templates" },
      { "include": "src/templates/**/*", "outDir": "dist/templates" },
      { "include": "src/templates/*", "outDir": "dist/templates" }
    ],
    "watchAssets": true
  }
}
